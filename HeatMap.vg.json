{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Burnt Forest Area by Type and State",
    "fontSize": 20,
    "color": "white",
    "font": "Yatra One"
  },
  "background": "#141414",
  "width": 300,
  "height": 300,
  "data": {
    "url": "https://raw.githubusercontent.com/L4N4HU55/FIT3179_A2/refs/heads/main/Area%20of%20Burnt%20Forest.csv",
    "format": { "type": "csv" }
  },
  "transform": [
    {
      "filter": { "field": "Burnt Forest Area", "range": [0, 3000] }
    }
  ],
  "layer": [
    {
      "mark": "rect",
      "encoding": {
        "x": {
          "field": "Forest tenure",
          "type": "nominal",
          "title": "Forest Tenure",
          "axis": { "labelAngle": 45 }
        },
        "y": {
          "field": "State",
          "type": "nominal",
          "title": "State"
        },
        "color": {
          "field": "Burnt Forest Area",
          "type": "quantitative",
          "title": "Area (hectares)",
          "scale": { "range": ["#d86f39", "#751228"] },
          "legend": {
            "title": "Area (hectares)",
            "orient": "right",
            "format": ",.0f"
          }
        },
        "tooltip": [
          { "field": "Forest tenure", "type": "nominal" },
          { "field": "State", "type": "nominal" },
          { "field": "Burnt Forest Area", "type": "quantitative" }
        ]
      }
    },
    {
      "mark": { "type": "text", "baseline": "middle", "align": "center" },
      "encoding": {
        "text": { "field": "Burnt Forest Area", "type": "quantitative" },
        "color": {
          "value": "white"
        },
        "x": { "field": "Forest tenure", "type": "nominal" },
        "y": { "field": "State", "type": "nominal" }
      }
    }
  ],
  "config": {
    "text": { "color": "white", "font": "Yatra One" },
    "axis": {
      "labelColor": "white",
      "titleColor": "white",
      "labelFont": "Yatra One",
      "titleFont": "Yatra One"
    },
    "legend": {
      "labelColor": "white",
      "titleColor": "white",
      "labelFont": "Yatra One",
      "titleFont": "Yatra One"
    }
  }
}
